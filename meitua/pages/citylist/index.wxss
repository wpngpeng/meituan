/* pages/citylist/index.wxss */

scroll-view {
  height: 100%;
}

.city-list {
  background: #fff;
  font-size: 30rpx;
  line-height: 90rpx;
  color: #000;
  padding: 0 30rpx;
}

.city-list-item {
  font-size: 24rpx;
  border-bottom: 1px solid #ddd;
}

.city-list-item:last-child {
  border: none;
}

.city-index {
  font-size: 24rpx;
  line-height: 60rpx;
  color: #333;
  padding: 0 30rpx;
}

.city-hot {
  overflow: hidden;
  padding: 15rpx;
}

.city-hot-item {
  float: left;
  margin: 5rpx 8rpx;
  width: 200rpx;
  line-height: 55rpx;
  font-size: 24rpx;
  text-align: center;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  color: #333;
  background: #fff;
  border: 1px solid #ddd;
}

.city-index-list {
  display: flex;
  position: fixed;
  right: 10rpx;
  top: 0;
  width: 52rpx;
  height: 100%;
}

.city-index-list-inner {
  margin: auto;
  width: 52rpx;
  font-size: 22rpx;
  text-align: center;
  line-height: 38rpx;
}

.locatetype {
  color: #aaa;
  margin-left: 15rpx;
  font-size: 24rpx;
}
