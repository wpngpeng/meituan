/* pages/shoplist/index.wxss */
@import "../../common/css/font.wxss";
@import "../../common/css/list.wxss";
.shopList {
  padding-top: 80rpx;
  background: #fff;
}
.list-nav {
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
  box-sizing: border-box;
  display: flex;
  height: 80rpx;
  border: 1px solid #e4e4e4;
  background: #fff;
  z-index: 10;
}
.list-nav text {
  flex: 1;
  text-align: center;
  color: #333;
  font-size: 28rpx;
  line-height: 80rpx;
}
.list-nav .ico {
  width: 30rpx;
  flex: none;
  line-height: 70rpx;
  color: #999;
}
.list-nav text::after {
  color: #999;
  margin-left: 10rpx;
}
.options {
  display: none;
  box-sizing: border-box;
  position: fixed;
  z-index: 999;
  left: 0;
  top: 80rpx;
  width: 100%;
  background: #fff;
  padding: 10rpx 30rpx;
}
.options.show{
  display: block;
}
.options view {
  font-size: 28rpx;
  line-height: 60rpx;
  border-bottom: 1px solid #e4e4e4;
}

.active, .icon-down-trangle-copy.active:after{
  color: #ff7a2d !important;
}

.mask{
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  z-index: 3;
  background: rgba(0, 0, 0, .5);
}
